<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DinnerTable">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">
        <TableRow>
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dinner Meals"
            android:layout_weight="1"
            android:gravity="center"/>

        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meal 1"
                android:layout_weight="1"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meal 2"
                android:layout_weight="1"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meal 3"
                android:layout_weight="1"
                android:gravity="center"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 ounces of steamed shrimp \n 1 baked potato \n 1 tablespoon of salsa \n 1 tablespoon of unsweetened gree yogurt \n 3 cups of spinach(steamed) \n 1 low-fat ice-cream bar or 1 ounce of chocolate"
                android:layout_weight="1"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 ounces roasted pork tenderloin \n 1 cup baked acorn squash \n pinch of cinnamon \n 2 or 3 cups of salad greens with olive oil and vinegar \n 1 low-fat ice cream bar or chocolate bar"
                android:layout_weight="1"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jambalaya \n 3/4 cup of cooked brown rice \n 1/2 cup of corn \n 2 ounces of cooked turkey sausage (sliced) \n 1/3 cup of salsa \n 1/4 cup of non-salted black or navy beans.(Heat up) \n 3 cups of spinach sauteed with garlic \n 1 tablespoon of olive oil"
                android:layout_weight="1"
                android:gravity="center"/>

        </TableRow>
    </TableLayout>

</LinearLayout>